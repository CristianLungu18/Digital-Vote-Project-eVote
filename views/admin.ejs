<%-include('partials/header') %>
    <link rel="stylesheet" href="/css/admin.css" />
    <title>Home</title>
  </head>
  <body>
    <%-include('partials/navbar') %>
    <div class="title">
      <h1>Admin Panel</h1>
    </div>
    <div class="container-btn">
      <div class="results-box">
        <div class="btn-box" style="margin-left: 52px;">
            <button type="submit" class=" add-btn show-results-btn">Ascunde rezultatele</button>
        </div>
      </div>
      <div class="btn-box" style="margin-right: 52px;">
        <a href="/add-candidate" class="add-btn">Adauga candidat</a>
      </div>
    </div>
    <div class="box">
      <table class="table">
        <%if(candidates.length === 0){%>
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nume</th>
              <th scope="col">Prenume</th>
              <th scope="col">Descriere</th>
              <th scope="col">Varsta</th>
              <th scope="col">Partid</th>
              <th scope="col">Optiuni</th>
            </tr>
          </thead>
          <%}else{%>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nume</th>
                <th scope="col">Prenume</th>
                <th scope="col">Descriere</th>
                <th scope="col">Varsta</th>
                <th scope="col">Partid</th>
                <th scope="col">Optiuni</th>
              </tr>
            </thead>
            <tbody>
            <%candidates.forEach((candidate,index)=>{%>
              <tr>
                <th scope="row"><%= index+1 %></th>
                <td><%= candidate.nume %></td>
                <td style="padding-left: 13px;"><%= candidate.prenume %></td>
                <td><%= candidate.descriere %></td>
                <td style="padding-left: 22px;"><%= candidate.varsta %></td>
                <td style="padding-left: 13px;"><%= candidate.partid %></td>
                <td>
                  <a href="/candidates/<%= candidate._id %>"><i class="fa-solid fa-pen-to-square edit-btn"></i></a>
                  <a href="/delete-candidate/<%= candidate._id %>"><i class="fa-solid fa-trash delete-btn"></i></a>
                </td>
              </tr>
              <%})%>
            </tbody>
            <%}%>
      </table>
    </div>
    <%-include('partials/footer')%>
    <script src="/script/admin.js"></script>
  </body>
</html>
